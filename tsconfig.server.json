{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",                    // було: "./server"
    "module": "esnext",                 // було: "CommonJS"
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["server/**/*", "shared/**/*"], // дозволяє імпорти з shared
  "exclude": ["node_modules", "client"]
}
