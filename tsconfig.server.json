  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./server",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "client"]
}
